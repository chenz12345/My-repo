
#!/bin/sh

if [ -f "venv/bin/activate" ]; then

  . venv/bin/activate
fi

FILES=$(git diff --cached --name-only --diff-filter=ACM | grep '\.py$')
if [ "$FILES" ]; then
  echo "Running flake8..."
  flake8 $FILES
  if [ $? -ne 0 ]; then
    echo "flake8 failed. Fix errors before committing."
    exit 1
  fi
fi
exit 0
